@import "../../common/styles/colors.wxss";
@import "../../common/styles/layout.wxss";

authmodal {
  width: 100%;
  height: 100%;
}

.wall {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 100;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .8);
}

.authmodal {
  width: 60%;
  background-color: #fff;
}

.authmodal image {
  width: 130rpx;
  height: 130rpx;
  margin: 50rpx 0;
}

.authmodal text {
  font-size: 27rpx;
  padding: 0 72rpx;
  text-align: center;
}

.authmodal button {
  border: 0;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 0 0 18rpx 18rpx;
  background-color: #79b6d7;
  width: 100%;
  margin-top: 30rpx;
}